<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scheduling_nav_graph"
    app:startDestination="@id/readingForSchedulingFrag">

    <fragment
        android:id="@+id/readingForSchedulingFrag"
        android:name="com.apc.cng_hpcl.home.scheduling.ReadingForSchedulingFrag"
        android:label="Take Reading">

        <argument
            android:name="op_id"
            app:argType="string" />

        <argument
            android:name="type"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="dbs_id"
            app:argType="string" />
        <action
            android:id="@+id/action_readingForSchedulingFrag_to_schPhotoFrag"
            app:destination="@id/schPhotoFrag" />
        <argument
            android:name="casc_id"
            android:defaultValue="def"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/schPhotoFrag"
        android:name="com.apc.cng_hpcl.home.scheduling.SchPhotoFrag"
        android:label="Capture Gauge">
        <argument
            android:name="type"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="op_id"
            app:argType="string" />

        <argument
            android:name="dbs_id"
            app:argType="string" />
        <argument
            android:name="casc_id"
            app:argType="string" />
        <action
            android:id="@+id/action_schPhotoFrag_to_readingForSchedulingFrag"
            app:destination="@id/readingForSchedulingFrag"
            app:popUpTo="@id/readingForSchedulingFrag"
            app:popUpToInclusive="true" />
        <argument
            android:name="gauge_make"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>