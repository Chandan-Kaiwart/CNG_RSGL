<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FFA94D"
        android:layout_height="match_parent">
<!--heading logo-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headCard"
            android:layout_width="match_parent"
            android:layout_height="90dp"

            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="8"

            app:cardBackgroundColor="#E9ECEF"
            app:cardElevation="16dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:id="@+id/verTv"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:layout_gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="version"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"

                    android:src="@drawable/rsgl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:visibility="visible"
                    android:text="Dispenser Reading"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--        not in use station-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/titleCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_weight="3"
            android:visibility="gone"
            app:cardBackgroundColor="#E9ECEF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoSizeTextType="uniform"
            android:text="Station Name"
            android:id="@+id/statTv"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"

            />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lcvManagement"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_weight="8"

            app:cardBackgroundColor="#E9ECEF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_tanker_red"
                    app:tint="@color/orange"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="LCV Management"
                    android:textColor="#1E7D34"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--   sales report     -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dispCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_weight="8"

            app:cardBackgroundColor="#E9ECEF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:src="@drawable/disp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="Gas Sales"
                    android:textColor="#1E7D34"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--challan-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/challanCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_weight="8"

            app:cardBackgroundColor="#E9ECEF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_challan"
                    android:backgroundTint="@color/orange"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="LCV Challan "
                    android:textColor="#1E7D34"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--     gas reconcilation   -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_weight="8"

            app:cardBackgroundColor="#E9ECEF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_gas_reconciliation"
                    app:tint="@color/orange"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="Gas Reconciliation"
                    android:textColor="#1E7D34"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

<!--        POS-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_weight="8"

            app:cardBackgroundColor="#E9ECEF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_pos"
                    app:tint="@color/orange"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="POS"
                    android:textColor="#1E7D34"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

<!--not in use-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_weight="4"

            app:cardBackgroundColor="@android:color/holo_blue_light"

            app:cardElevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="@color/white"
            android:dividerPadding="8dp"
            android:showDividers="beginning|end|middle">

<!--            LCv status-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/lcvStatusLL"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/analytics"
                    app:tint="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoSizeTextType="uniform"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="LCV \nStatus"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

<!--            LCV Tracking-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/outline_admin_panel_settings_24"
                    app:tint="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoSizeTextType="uniform"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="Control Room"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>
<!--            Control room-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/ctrlRoomLL"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_admin_panel_settings_24"
                    app:tint="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoSizeTextType="uniform"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="Control Room"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>