<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA94D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Title Bar Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#E9ECEF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dispenser Sales Analytics"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#1E7D34"
                android:textStyle="bold"
                android:padding="16dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Input Controls Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#E9ECEF"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Date Selection Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etFromDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:hint="From Date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:background="@android:drawable/editbox_background"
                        android:padding="12dp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/etToDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:hint="To Date"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:background="@android:drawable/editbox_background"
                        android:padding="12dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Station Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1E7D34" />


                <Spinner
                    android:id="@+id/spinnerStation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    android:background="@drawable/edittext_bg" />


                <!-- Dispenser Filter Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispenser Filter:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1E7D34" />


                <Spinner
                    android:id="@+id/spinnerDispenser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    android:background="@drawable/edittext_bg" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Loading Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#1E7D34"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Charts Container -->
        <LinearLayout
            android:id="@+id/llChartsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Statistics Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#E9ECEF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Summary Statistics"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E7D34"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F8F9FA"
                            android:padding="12dp"
                            android:layout_marginEnd="4dp">

                            <TextView
                                android:id="@+id/tvTotalSales"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1E7D34" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Sales (Kg)"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F8F9FA"
                            android:padding="12dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp">

                            <TextView
                                android:id="@+id/tvAvgDaily"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1E7D34" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Daily (Kg)"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F8F9FA"
                            android:padding="12dp"
                            android:layout_marginStart="4dp">

                            <TextView
                                android:id="@+id/tvBestShift"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1E7D34" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Best Shift"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:gravity="center" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sales Trend Line Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#E9ECEF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales Trend Over Time"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E7D34"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/salesLineChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="#FAFAFA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Shift Sales Bar Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#E9ECEF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales by Shift"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E7D34"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/shiftBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#FAFAFA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dispenser Distribution Pie Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#E9ECEF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales Distribution by Dispenser"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E7D34"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/dispenserPieChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="#FAFAFA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Sales Bar Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#E9ECEF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Sales Summary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E7D34"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/dailySalesBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#FAFAFA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>
    </LinearLayout>
</ScrollView>
