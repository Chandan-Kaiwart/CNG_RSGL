<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="top"
    android:background="#FFA94D">

    <!-- Main Content Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#E9ECEF"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Challan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1E7D34"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- LCV Spinner Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select LCV"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E7D34"
                android:layout_marginBottom="8dp" />

            <!-- Spinner for LCVs -->
            <Spinner
                android:id="@+id/spinnerLCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:spinnerMode="dropdown"
                android:padding="8dp"
                android:background="@drawable/edittext_bg" />

            <!-- DBS Spinner Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select DBS Station"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E7D34"
                android:layout_marginBottom="8dp" />

            <!-- Spinner for DBS -->
            <Spinner
                android:id="@+id/spinnerDBS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="8dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/edittext_bg" />

            <!-- âœ… Transaction CheckBox Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Transaction Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Transactions"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1E7D34"
                    android:layout_marginBottom="8dp" />

                <!-- âœ… CheckBox Container -->
                <LinearLayout
                    android:id="@+id/layoutTransactionCheckBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="8dp">

                    <!-- CheckBoxes will be added dynamically here -->

                </LinearLayout>

                <!-- âœ… Selected Count Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#f8f9fa"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Selected:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvSelectedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#1E7D34"
                        android:background="#E8F5E8"
                        android:padding="4dp"
                        android:minWidth="24dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- âœ… Select All / Clear Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSelectAll"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Select All"
                        android:textSize="12sp"
                        android:backgroundTint="#2E7D34"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btnClearAll"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="Clear All"
                        android:textSize="12sp"
                        android:backgroundTint="#DC3545"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- âœ… Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#E8F5E8"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Summary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1E7D34"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#2E7D34" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE CHALLANS"
                android:backgroundTint="#1E7D34"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
