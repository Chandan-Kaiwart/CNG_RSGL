<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <LinearLayout
        android:id="@+id/preview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--
                        <TextView
                            android:id="@+id/res_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capture current consumption"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite" />
            -->
            <Button
                android:id="@+id/res_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:textColor="@color/Accent"
                android:background="@null"
                android:text="Capture Current Consumption (KwH)" />

            <SurfaceView
                android:id="@+id/camera_preview_surface"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <View
                android:visibility="gone"
                android:id="@+id/border_camera"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:background="@drawable/border" />

            <View
                android:id="@+id/border_camera_reading"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/border_blue" />

            <TextView
                android:id="@+id/res_border_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="size"
                android:visibility="gone"
                android:textColor="@color/Accent" />

            <Button
                android:id="@+id/make_photo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                android:text="photo" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>